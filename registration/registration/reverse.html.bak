  <script>
  function reverse(){
	  var text="";
	  var number=document.getElementById("rev").value;
	  for(i=0;i<=number.length;i++){
		  text = number.substring(i,i+1)+text;
	  }
	  alert("Reverse number is "+text);
  }
  </script>
 </head>

 <body>
  <input type="text" id="rev">
  <input type="button" value="Click" onclick="reverse()">
 </body>
